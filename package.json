{
  "name": "rainmaker",
  "type": "module",
  "private": true,
  "workspaces": [
    "ui",
    "api"
  ],
  "scripts": {
    "dev:ui": "cd ui && bun run dev",
    "dev:api": "cd api && bun run dev",
    "dev": "concurrently \"bun run dev:api\" \"bun run dev:ui\"",
    "build": "bun run build:ui && bun run build:api",
    "build:ui": "cd ui && bun run build",
    "build:api": "cd api && bun run build"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "concurrently": "^9.1.2",
    "typescript": "^5.0.0"
  }
}
